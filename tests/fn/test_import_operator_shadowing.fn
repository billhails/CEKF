// Local operator should shadow an imported one in an inner scope

let
    link "import_ops_lib.fn" as ops;
    import ops operators;
in {
    // Define a local Infix operator with the same symbol in a nested let to shadow the import
    let
        operator "_plus_" left 100 fn(x, y) { x - y };
    in
        // Local shadowing should take effect for plus
        assert(7 plus 3 == 4);

        // Other imported operators remain in effect
        assert(~5 == -5);
        assert(5 squared == 25)
}

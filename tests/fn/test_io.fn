let
    link "ioutils.fn" as io;
    testFile = "/tmp/junk";
    testData = "Â¡Hello, World!";
in
    io.with_output_to(testFile, fn(fh) {
        fputs(fh, testData);
    });

    io.with_input_from(testFile, fn(fh) {
        let data = fgets(fh);
        in assert(data == testData);
    });

    io.with_input_from(testFile, fn(fh) {
        let data = fgetc(fh);
        in assert(data == '\ua1;');
    });

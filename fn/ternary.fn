let
    macro TEST(lhs, rhs) { fn { (true) { lhs } (false) { rhs } } }
    infix right 2 "?" fn (tst, swtch) { swtch(tst) };
    infix left 2 ":" TEST;
in
    //      +------+-------------+
    //      |      |             |
    //      |      +-----+---+   |
    //      |      |     |   |   |
    print true ? false ? 1 : 2 : 3


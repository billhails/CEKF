let
    link "ambutils.fn" as amb;
    import amb operators;

    fn pythagorean_triples() {
        let
            z = 1 ... ;
            x = 1 .. z;
            y = x .. z;
        in
            !: x**2 + y**2 == z**2;
            [z, y, x]
    }
in {
    let triple = pythagorean_triples();
    in
        print(triple);
        !: <triple > 500;
}
